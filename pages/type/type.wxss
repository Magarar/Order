/* pages/type/type.wxss */
.type-box{
  display: flex;
  flex-direction: row;
  height:100vh;
}

.type-left{
  width:300rpx;
  background-color: rgb(250, 250, 250);

}

.type-info{
  margin-bottom: 10px;
  margin-top: 10px;
}

.type-info{
  margin-bottom: 10px;
  margin-top: 10px;
}

.choose-type{
  background-color: white;
}

.type-left view{
  text-align: center;
  padding: 20rpx,0;

}

.type-good-box{
  display: flex;
  flex-direction: row;
  margin: 0 0 30rpx 0;
}

.type-good-image{
  width: 100rpx;
  height: 100rpx;
  object-fit: cover; /* 图片保持比例填充容器，可能会裁剪 */
  border-radius: 4px; /* 可选：为图片添加圆角，与.type-item的圆角相匹配但稍小 */
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.choose-number-box{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.choose-number-box image{
  width: 50rpx;
  height: 50rpx;
}

.bottom-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: "center";
}

.type-good-right{
  width: 400rpx;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}

.type-goods-recommend{
  font-size: 26rpx;
  color: #bbbbbb;
  margin-bottom: 3px;
}

.type-good-price{
  margin-top: 7rpx;
  color: red;
  font-size: 28rpx;
}

.type-good-title{
  margin-top: 20rpx;
  font-size: 30rpx;
  margin-bottom: 3px;
}

.type-good-number{
  margin:0 15rpx
}