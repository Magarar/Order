/* pages/Goods/Goods.wxss */
.goods-cover{
  width:100%;
  height:600rpx;
}

.goods-tag{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  margin: 20rpx 20rpx; 
  align-items:center;
}

.goods-price{
  color: red;
  font-size: 40rpx;
}

.goods-recommend{
  color:red;

}

.goods-title-box{
  display: flex;
  margin: 10rpx 20rpx;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
}

.goods-title{
  font-size: 40rpx;
  font-weight: bold;
}


.goods-secondTitle{
  border-top: 4rpx solid #F7F7F7;
  font-size: 40rpx;
  font-weight: 550;
  padding:20rpx,20rpx;
  margin-top: 50rpx;
}

.goods-content-box{
  margin: 0 20rpx;
  font-size: 30rpx;
}

.tabber{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 120rpx;
  background-color: white;
  border-top:1rpx solid #f7f7f7 ;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
}

.tabber-image{
  width: 50rpx;
  height: 50rpx;
  object-fit: cover; /* 图片保持比例填充容器，可能会裁剪 */
  border-radius: 4px; /* 可选：为图片添加圆角，与.type-item的圆角相匹配但稍小 */
  margin:0rpx 0 0 20rpx;
}

.tabber-right{
  display: flex;
  flex-direction: row;
}

.add-cart{
  background-color: orange;
  padding: 0rpx 40rpx;
  height: 120rpx;
  line-height: 120rpx;
}

.cart_number{
  background-color: red;
  border-radius:50% ;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 70rpx;
  top: 0;
  color:white;
  text-align: center;
  font-size: 26rpx;
}
